@model IEnumerable<CrudHHF.Models.Partido>
@{
    ViewData["Title"] = "Lista de partidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"] != null)

    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de partidos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Crear" asp-controller="Partidos">Agregar nuevo partido</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.ID)</td>
                        <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Complejo)</td>
                        <td>@Html.DisplayNameFor(m => m.PrecioTotal)</td>
                        <td>@Html.DisplayNameFor(m => m.FechaPartido)</td>
                        <td>@Html.DisplayNameFor(m => m.Genero)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoPartido)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoTecho)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoPiso)</td>
                        <td>@Html.DisplayNameFor(m => m.RangoEtario)</td>
                        <td>Metodos</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Nombre</td>
                        <td>@item.Complejo</td>
                        <td>@item.PrecioTotal</td>
                        <td>@item.FechaPartido</td>
                        <td>@item.Genero</td>
                        <td>@item.TipoPartido</td>
                        <td>@item.TipoTecho</td>
                        <td>@item.TipoPiso</td>
                        <td>@item.RangoEtario</td>
                        <td>
                            <a asp-controller="Partidos" asp-action="Editar" asp-route-id="@item.ID" class="btn btn-warning">Editar</a>
                            <a asp-controller="Partidos" asp-action="Eliminar" asp-route-id="@item.ID" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen partidos todavía</p>
        }



    </div>
</div>