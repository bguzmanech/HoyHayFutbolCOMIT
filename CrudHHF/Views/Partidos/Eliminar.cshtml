@model CrudHHF.Models.Partido
@{
    ViewData["Title"] = "Eliminar partido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar partido</h3>
        </div>
        
            </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="EliminarPartido">

                <input type="hidden" asp-for="ID" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class=" form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" disabled/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Complejo" class="control-label"></label>
                    <input asp-for="Complejo" class="form-control" disabled/>
                    <span asp-validation-for="Complejo" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="PrecioTotal" class="control-label"></label>
                    <input asp-for="PrecioTotal" class="form-control" disabled/>
                    <span asp-validation-for="PrecioTotal" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="FechaPartido" class="control-label"></label>
                    <input asp-for="FechaPartido" class="form-control" disabled/>
                    <span asp-validation-for="FechaPartido" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Genero" class="control-label"></label>
                    <input asp-for="Genero" class="form-control" disabled/>
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="TipoPartido" class="control-label"></label>
                    <input asp-for="TipoPartido" class="form-control" disabled/>
                    <span asp-validation-for="TipoPartido" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="TipoTecho" class="control-label"></label>
                    <input asp-for="TipoTecho" class="form-control" disabled/>
                    <span asp-validation-for="TipoTecho" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="TipoPiso" class="control-label"></label>
                    <input asp-for="TipoPiso" class="form-control" disabled/>
                    <span asp-validation-for="TipoPiso" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="RangoEtario" class="control-label"></label>
                    <input asp-for="RangoEtario" class="form-control" disabled/>
                    <span asp-validation-for="RangoEtario" class="text-danger"></span>
                </div>

                <div class=" form-group">
                    <input type="submit" value="Eliminar partido" class="btn btn-primary" />
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts{ 
    @{ <partial name= "_ValidationScriptsPartial.cshtml" />}
}


