@model IEnumerable<CrudHHF.Models.Organizador>
@{
    ViewData["Title"] = "Lista de torneos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if(TempData["mensaje"] != null)
     {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div> 
     }

        <div class="row">
            <div class="col-sm-6">
                <h3>Lista de torneos</h3>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-action="Crear" asp-controller="Organizadores">Agregar nuevo torneo</a>
            </div>
        </div>
</div>


    <div class="row">
        <div class="col-sm-12">
            @if(Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <td>@Html.DisplayNameFor(m => m.ID)</td>
                                <td>@Html.DisplayNameFor(m => m.NombreTorneo)</td>
                                <td>@Html.DisplayNameFor(m => m.NombreComplejo)</td>
                                <td>@Html.DisplayNameFor(m => m.DireccionComplejo)</td>
                                <td>@Html.DisplayNameFor(m => m.LocalidadComplejo)</td>
                                <td>@Html.DisplayNameFor(m => m.PrecioPorEquipo)</td>
                                <td>@Html.DisplayNameFor(m => m.FechaDelTorneo)</td>
                                <td>@Html.DisplayNameFor(m => m.ModalidadDePartido)</td>
                                <td>@Html.DisplayNameFor(m => m.Genero)</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                                {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.NombreTorneo</td>
                                <td>@item.NombreComplejo</td>
                                <td>@item.DireccionComplejo</td>
                                <td>@item.LocalidadComplejo</td>
                                <td>@item.PrecioPorEquipo</td>
                                <td>@item.FechaDelTorneo</td>
                                <td>@item.ModalidadDePartido</td>
                                <td>@item.Genero</td>
                                <td>
                                    <a asp-controller="Organizadores" asp-action="Editar" asp-route-id="@item.ID" class="btn btn-warning">Editar</a>  
                                </td>  
                                <td>   
                                    <a asp-controller="Organizadores" asp-action="Eliminar" asp-route-id="@item.ID" class="btn btn-danger">Eliminar</a>
                                </td> 
                            </tr>
                                }
                        </tbody>
                    </table>
                }
            else
                {
                    <p>No hay torneos creados aún.</p>
                }
        
        </div>
    </div> 

